<Defs>
  <!-- metal -->
  <recipeDef>
    <defName>AR_AlloyBronze</defName>
    <label>smelt iron and copper to bronze (x15)</label>
    <description>Use the heat of concentrated wood fire to smelt metals.</description>
    <jobString>Smelting iron and copper to bronce.</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AR_Copper</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AR_Iron</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <products>
      <AR_Bronze>15</AR_Bronze>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AR_Iron</li>
        <li>AR_Copper</li>
      </thingDefs>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>AR_Smelter</li>
      <li>ElectricSmelter</li>
    </recipeUsers>
    <researchPrerequisite>AR_Project_Metal_I</researchPrerequisite>
  </recipeDef>
