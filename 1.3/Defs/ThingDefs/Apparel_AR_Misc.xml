      </bodyPartGroups>
      <wornGraphicPath>Items/Apparel/Tunika/Tunika</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Hellenic</li>
        <li>RomeCivil</li>
		<li>RomeNoble</li>
		<li>RomeOfficer</li>
		<li>RomePlayer</li>
        <li>Persian</li>
		<li>Neolithic</li>
		<li>Tribal</li>
		<li>Medieval</li>
		<li>MedievalApparel</li>
		<li>MedievalApparelBasic</li>
