<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- metal -->
  <recipeDef>
    <defName>AR_AlloyBronze</defName>
    <label>smelt bronze (x15)</label>
    <description>Use the heat of the smelter to smelt bronze.</description>
    <jobString>smelting bronze alloy</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AR_Copper</li>
			<li MayRequire="TSP.Isengriff.BronzeCopperTin_Split">ST_Copper</li>
			<li MayRequire="TSP.Isengriff.BronzeCopperTin_Split">ST_BronzeMixture</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AR_Iron</li>
			<li MayRequire="TSP.Isengriff.BronzeCopperTin_Split">ST_Tin</li>
			<li MayRequire="TSP.Isengriff.BronzeCopperTin_Split">ST_BronzeMixture</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <products>
      <AR_Bronze>15</AR_Bronze>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AR_Iron</li>
        <li>AR_Copper</li>
		<li MayRequire="TSP.Isengriff.BronzeCopperTin_Split">ST_Tin</li>
		<li MayRequire="TSP.Isengriff.BronzeCopperTin_Split">ST_BronzeMixture</li>
      </thingDefs>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>AR_Smelter</li>
      <li>ElectricSmelter</li>
    </recipeUsers>
    <researchPrerequisite>AR_Project_Metal_I</researchPrerequisite>
  </recipeDef>

