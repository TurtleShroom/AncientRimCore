<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <thingDef Name="AncientHatBase" ParentName="ApparelBase" Abstract="True">
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
  </thingDef>
  <thingDef Name="AncientHatMakeableBase" ParentName="AncientApparelMakeableBase" Abstract="True">
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
  </thingDef>
  <thingDef Name="AncientArmourHelmetMakeableBase" ParentName="AncientArmourMakeableBase" Abstract="True">
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
  </thingDef>
  <ThingDef ParentName="AncientHatMakeableBase">
    <defName>AR_PhrygianCap</defName>
    <label>phrygian cap</label>
    <description>A cap made of felt or leather, originating from the region of Phrygia.</description>
    <graphicData>
      <texPath>Items/Apparel/PhrygianCapOnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>0.14</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.40</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Items/Apparel/Hats/PhrygianCap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Hellenic</li>
        <li>Persian</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="AncientHatMakeableBase">
    <defName>AR_SunHat</defName>
    <label>sun hat</label>
    <description>A hat which protects the wearer's head from the sun.</description>
    <graphicData>
      <texPath>Items/Apparel/SunHatOnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>1800</WorkToMake>
      <Mass>0.14</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.50</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.10</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Items/Apparel/Hats/SunHat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Hellenic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.54,0.15,1)</only>
        </li>
        <li>
          <weight>15</weight>
          <only>(0.9,0.6,0.18,1)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>(0.9,0.42,0.23,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  <ThingDef ParentName="AncientHatMakeableBase">
    <defName>AR_Headband</defName>
    <label>headband</label>
    <description>A simple stripe of cloth or leather, designed to prevent hair from falling into the face.</description>
    <graphicData>
      <texPath>Items/Apparel/HeadbandOnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>10</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>2000</WorkToMake>
      <Mass>0.04</Mass>
      <StuffEffectMultiplierArmor>0.05</StuffEffectMultiplierArmor>
      <EquipDelay>0.4</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Items/Apparel/Hats/Headband</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Hellenic</li>
        <li>Persian</li>
        <li>IndustrialBasic</li>
        <li>EgyptianBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
</Defs>